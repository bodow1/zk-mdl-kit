{
  "name": "zk-mdl-kit",
  "version": "1.0.0",
  "description": "A minimal, wallet-agnostic verifier and derived-VC bridge for online age/residency checks using mobile driver's licenses (ISO mdoc/mDL)",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start:verifier": "node verifier/server.js",
    "start:issuer": "node issuer/server.js",
    "start:example": "node examples/server.js",
    "dev": "node --watch verifier/server.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker-compose build"
  },
  "keywords": [
    "mdl",
    "mdoc",
    "digital-credentials",
    "oid4vp",
    "oid4vci",
    "verifiable-credentials",
    "zero-knowledge",
    "longfellow"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "jose": "^5.1.3",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}

